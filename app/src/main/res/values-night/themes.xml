<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="buttonStyle">@style/button</item>
        <item name="alertDialogTheme">@style/AlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/TransparentBottomSheetDialog</item>

        <item name="android:textViewStyle">@style/TextViewRegular</item>
        <item name="android:statusBarColor">@color/colorAccent</item>

        <!--        <item name="android:windowLightStatusBar">false</item>-->


    </style>

    <!--    <style name="Theme.VideosViewsBasedEarningApp" parent="Base.Theme.VideosViewsBasedEarningApp" />-->

    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--                <item name="android:background">#FFEB3B</item>-->
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="editTextStyle">@style/EditText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>


    <style name="TextViewExtraBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">@dimen/space_12</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="TextViewExtraSemBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/space_12</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextViewSemBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">@dimen/space_7</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyTextview_semibold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/space_6</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextViewRegular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextViewBottom" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/space_5</item>
        <item name="android:layout_margin">@dimen/space_2</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:includeFontPadding">false</item>
    </style>



    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
        <item name="android:paddingLeft">@dimen/space_6</item>
        <item name="android:paddingRight">@dimen/space_6</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/hint_color</item>
        <item name="fontFamily">@font/poppins_medium</item>

    </style>
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
    </style>

    <!--    <item name="android:textCursorDrawable">@drawable/edit_text_cursor</item>>-->
    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textColor">@color/black</item>
        <item name="background">@drawable/bg_button</item>
        <item name="android:background">@drawable/bg_button</item>

        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetFullScreen</item>
    </style>

    <style name="BottomSheetFullScreen" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="hintTextColor">@color/dark_gray</item>
    </style>

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>