<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
   <LinearLayout
       android:layout_marginVertical="@dimen/space_3"
       android:id="@+id/lin_main"
       android:padding="@dimen/space_3"
       android:background="@drawable/bg_shadow_box"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_marginVertical="@dimen/space_2"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:textStyle="bold"
               android:id="@+id/tv_title"
               android:layout_toLeftOf="@+id/iv_arrow"
               style="@style/MyTextview_semibold"
               android:text="Title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <ImageView
               android:id="@+id/iv_arrow"
               android:layout_alignParentEnd="true"
               android:rotation="90"
               android:src="@drawable/ic_right_arrow"
               android:layout_width="8pt"
               android:layout_height="8pt"/>
       </RelativeLayout>
       <LinearLayout
           android:id="@+id/lin_des"
           android:orientation="vertical"
          android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/tv_desctination"
               android:text="Description"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:visibility="gone"
               android:id="@+id/tv_sol"
               android:layout_marginTop="@dimen/space_1"
               android:text="Description"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:textSize="@dimen/space_5"
               android:id="@+id/tv_dateTime"
              android:layout_marginTop="@dimen/space_1"
               android:text="20-04-2025 | 09:30 pm"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>



   </LinearLayout>

</RelativeLayout>