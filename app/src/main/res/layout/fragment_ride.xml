<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragement.CancleRide">
        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_map"
        android:src="@drawable/map_dummy"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200pt"/>
    <LinearLayout
        android:layout_marginHorizontal="@dimen/space_8"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/space_8"
            android:id="@+id/lin_search"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView

                android:text="@string/searching_nearby_vechicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iv_search"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_10"
                android:src="@drawable/logo"
                android:layout_width="50pt"
                android:layout_height="50pt"/>
            <Button
                android:id="@+id/btn_cancle"
                android:layout_marginTop="@dimen/space_10"
                android:text="@string/Cancel_Ride"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/space_5"
            android:id="@+id/lin_ride"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/gray_edittext"
                android:padding="@dimen/space_4"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight=".2"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/iv_loc"
                        android:layout_width="@dimen/space_7"
                        android:layout_height="@dimen/space_7"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_location" />
                    <TextView
                        android:layout_gravity="center"
                        android:text=".\n."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/space_7"
                        android:layout_height="@dimen/space_7"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_location" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1.8"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space_2"
                        android:gravity="center_vertical"
                        android:padding="@dimen/space_2">



                        <TextView
                            android:id="@+id/tv_pick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/space_5"
                            android:gravity="center_vertical"
                            android:text="@string/address"
                            />

                    </RelativeLayout>
                    <View
                        android:id="@+id/vline"
                        android:layout_below="@id/rel_main"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey_5"/>
                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/space_2"
                        android:gravity="center_vertical"
                        android:padding="@dimen/space_2">



                        <TextView
                            android:id="@+id/tv_destination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/space_5"
                            android:gravity="center_vertical"
                            android:text="@string/address" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/space_15"
                android:text="@string/available_rode_mate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rec_list"/>
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_bottom_cancle"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="@string/Cancel_Ride"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"/>
                <Button
                    android:id="@+id/btn_go"
                    android:layout_marginLeft="@dimen/space_8"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/space_10"
                    android:text="@string/lets_go"
                    android:backgroundTint="@color/green_500"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
        </ScrollView>


    </RelativeLayout>
</layout>
