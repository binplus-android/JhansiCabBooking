<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:visibility="gone"
        android:clickable="false"
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/space_6"
        android:layout_height="@dimen/space_6"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/space_4"
        android:layout_marginTop="@dimen/space_4"
        android:layout_marginEnd="@dimen/space_4"
        android:layout_marginBottom="@dimen/space_4"
        android:src="@drawable/ic_close" />
    <LinearLayout
       android:paddingVertical="@dimen/space_2"
        android:layout_below="@+id/iv_delete"
        android:layout_marginTop="@dimen/space_2"
        android:paddingHorizontal="@dimen/space_7"
        android:background="@color/grey_5"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                   />

            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/space_1"
                android:id="@+id/tv_desc"
                android:textSize="@dimen/space_5"
                android:text=" Let's start with your poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="@dimen/space_1"
                    android:id="@+id/tv_date"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/space_5"
                    android:layout_alignParentRight="true"
                    android:text=" 21-11-2024 | 17:22 PM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
        </LinearLayout>

</RelativeLayout>