<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginVertical="@dimen/space_1"
        android:background="@drawable/bg_shadow_box"
        android:padding="@dimen/space_4"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content">
            <TextView
                android:text="ID:#123"
                android:textSize="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_msg"
                android:text="Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/space_2"
                android:textSize="@dimen/space_5"
                android:text="20-04-2024 | 09:20 PM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/space_5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/red_600"
                android:textAlignment="textEnd"
                android:text="Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/green_500"
                android:textAlignment="textEnd"
                android:text="+Rs. 00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_right_arrow"
            android:layout_width="@dimen/space_8"
            android:layout_height="@dimen/space_8"/>
    </LinearLayout>
</RelativeLayout>