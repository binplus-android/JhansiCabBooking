<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lin_main"
        android:layout_marginVertical="@dimen/space_1"
        android:background="@drawable/bg_shadow_box"
        android:padding="@dimen/space_4"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1.2"
            android:layout_height="wrap_content">
            <TextView
                android:text="ID:#123"
                android:textSize="@dimen/space_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/space_2"
                android:textStyle="bold"
                android:textSize="@dimen/space_5"
                android:text="20-04-2024 | 09:20 PM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Vechicle Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
<!--            <TextView-->
<!--                android:textSize="@dimen/space_5"-->
<!--                android:textColor="@color/dark_grey"-->
<!--                android:text="Pickup"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"/>-->

<!--            <TextView-->
<!--                android:textSize="@dimen/space_5"-->
<!--                android:id="@+id/tv_msg"-->
<!--                android:text="Destination"-->
<!--                android:textColor="@color/dark_grey"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"/>-->
            <TextView
                android:layout_marginTop="@dimen/space_2"
                android:background="@drawable/bg_button"
                android:textColor="@color/black"
                android:textSize="@dimen/space_5"
                android:text="Status"
                android:backgroundTint="@color/grey_20"
                android:paddingHorizontal="@dimen/space_5"
                android:paddingVertical="@dimen/space_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/space_5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".8"

            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/green_500"
                android:textAlignment="textEnd"
                android:text="+Rs. 00"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="@dimen/space_5"
                android:layout_gravity="end"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_local"
                    android:layout_width="@dimen/space_21"
                    android:layout_height="@dimen/space_21"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginLeft="@dimen/space_4"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/logo"
                    android:layout_width="@dimen/space_21"
                    android:layout_height="@dimen/space_21"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/iv_detail"
            android:layout_gravity="center"
            android:src="@drawable/ic_right_arrow"
            android:layout_width="@dimen/space_8"
            android:layout_height="@dimen/space_8"/>
    </LinearLayout>
</RelativeLayout>