<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/space_80">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/background_car"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"/>
    <LinearLayout
        android:layout_marginBottom="@dimen/space_14"
        android:layout_marginLeft="@dimen/space_8"
        android:layout_alignParentBottom="true"

        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logo"
            android:layout_width="25pt"
            android:layout_height="28pt"/>
        <LinearLayout
            android:layout_marginLeft="@dimen/space_1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/space_17"
                android:textAlignment="center"
                style="@style/TextViewExtraBold"
                android:text="Jhansi"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="-8dp"
                android:textAlignment="center"
                android:textSize="@dimen/space_10"
                android:text="Cab Booking"
                android:layout_below="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>