<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragement.PaymentFragment">
        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:padding="@dimen/space_4"
                android:background="@color/grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/space_7"
                    style="@style/TextViewSemBold"
                    android:text="@string/estiamte_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_rate"
                    android:textSize="@dimen/space_7"
                    style="@style/TextViewSemBold"
                    android:layout_alignParentEnd="true"
                    android:text="Rs.0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
<!--<include layout="@layout/common_map"/>-->

                <LinearLayout
                    android:layout_marginHorizontal="@dimen/space_8"
                    android:layout_marginTop="@dimen/space_5"
                    android:id="@+id/lin_ride"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:id="@+id/rel_return_date"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_return_date"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentStart="true"
                            android:text="@string/return_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:id="@+id/tv_trip_type"
                            android:textStyle="bold"
                            android:text="@string/round_trip"
                            android:textSize="@dimen/space_5"
                            android:textColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    </RelativeLayout>
                    <TextView
                        android:layout_marginTop="@dimen/space_5"
                        android:text="@string/ride_mate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:id="@+id/lin_main"
                        android:layout_marginVertical="@dimen/space_2"
                        android:padding="@dimen/space_1"
                        android:background="@drawable/bg_outline_box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="@dimen/space_2">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_rimg"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:layout_centerVertical="true"
                                android:src="@drawable/logo" />
                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/space_8"
                                android:layout_toRightOf="@id/iv_rimg"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_ridername"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"

                                    android:gravity="center_vertical"
                                    android:text=""
                                    />
                                <RatingBar
                                    android:visibility="gone"
                                    android:id="@+id/rv_rate"
                                    android:rating="3"
                                    style="@style/customRatingBar"
                                    android:progressTint="@color/yellow"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    />
                            </LinearLayout>




                        </RelativeLayout>
                        <View
                            android:layout_marginHorizontal="@dimen/space_8"
                            android:background="@color/grey_5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>
                        <RelativeLayout
                            android:id="@+id/rel_mains"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:gravity="center_vertical"
                            android:padding="@dimen/space_2">

                            <ImageView
                                android:id="@+id/iv_vimg"
                                android:layout_width="@dimen/space_20"
                                android:layout_height="@dimen/space_20"
                                android:layout_centerVertical="true"
                                android:src="@drawable/logo" />
                            <LinearLayout
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="@dimen/space_8"
                                android:layout_toRightOf="@id/iv_vimg"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/tv_vname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    />
                                <TextView
                                    android:id="@+id/tv_vdesc"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    android:textSize="@dimen/space_5" />
                            </LinearLayout>



                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/space_5"
                        style="@style/TextViewSemBold"
                        android:layout_alignParentEnd="true"
                        android:text="@string/payment_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RadioGroup
                        android:id="@+id/rd_grp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/rd_upi"
                            android:text="@string/Upi"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:buttonTint="@color/colorAccent"
                            android:layout_marginLeft="-20pt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rd_credit"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:buttonTint="@color/colorAccent"
                            android:layout_marginLeft="-20pt"                            android:text="@string/Credit_Card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rd_debit"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:buttonTint="@color/colorAccent"
                            android:layout_marginLeft="-20pt"                            android:text="@string/Debit_Card"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rd_cash"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:buttonTint="@color/colorAccent"
                            android:layout_marginLeft="-20pt"                            android:text="@string/cash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <RadioButton
                            android:id="@+id/rd_wallet"
                            android:scaleX=".8"
                            android:scaleY=".8"
                            android:buttonTint="@color/colorAccent"
                            android:layout_marginLeft="-20pt"
                            android:text="@string/wallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RadioGroup>
                    <LinearLayout
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            style="@style/button"
                            android:id="@+id/btn_cancle"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/space_10"
                            android:text="@string/Cancel_Ride"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/red_600"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"/>
                        <Button
                            style="@style/button"
                            android:textColor="@color/white"
                            android:id="@+id/btn_pay"
                            android:layout_marginLeft="@dimen/space_8"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/space_10"
                            android:text="@string/payment"
                            android:backgroundTint="@color/green_500"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/button_height"/>
                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</layout>
