<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragement.HomeFragment">
        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@color/white"
                android:layout_marginVertical="@dimen/space_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/iv_map"
                        android:src="@drawable/map_dummy"
                        android:layout_width="match_parent"
                        android:layout_height="130pt"/>
                    <LinearLayout
                        android:id="@+id/lin_serch"
                        android:layout_marginTop="1dp"
                        android:layout_marginHorizontal="@dimen/space_8"
                        android:padding="@dimen/space_7"
                        android:elevation="@dimen/space_2"
                        android:backgroundTint="@color/white"
                        android:background="@drawable/bg_button"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView

                            android:layout_gravity="center"
                            android:src="@drawable/active_dot"
                            android:layout_width="@dimen/space_5"
                            android:layout_height="@dimen/space_5"/>
                        <TextView
                            android:id="@+id/tv_address"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/space_8"
                            android:text="@string/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginHorizontal="@dimen/space_8"
                        android:layout_below="@id/iv_map"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginTop="@dimen/space_5"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:layout_height="55pt">
                            <LinearLayout
                                android:id="@+id/lin_local"
                                android:background="@drawable/bg_shadow_box"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/iv_local"
                                    android:layout_gravity="center"
                                    android:src="@drawable/local"
                                    android:layout_width="match_parent"
                                    android:layout_height="40pt"/>
                                <TextView
                                    android:layout_marginTop="@dimen/space_5"
                                    android:text="@string/local"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/lin_outstation"
                                android:layout_marginLeft="@dimen/space_5"
                                android:background="@drawable/bg_shadow_box"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:id="@+id/uv_outstation"
                                    android:layout_gravity="center"
                                    android:src="@drawable/outstation"
                                    android:layout_width="match_parent"
                                    android:layout_height="40pt"/>
                                <TextView
                                    android:layout_marginTop="@dimen/space_5"
                                    android:text="@string/outstation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_marginHorizontal="@dimen/space_1"
                            android:layout_marginTop="@dimen/space_8"
                            android:orientation="vertical"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/radius_8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                              android:layout_margin="@dimen/space_5"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:id="@+id/lin_destination"
                                    android:backgroundTint="@color/grey_5"
                                    android:background="@drawable/bg_shadow_box"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/space_6"
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_marginLeft="@dimen/space_2"
                                        android:src="@drawable/search"
                                        android:layout_width="12pt"
                                        android:layout_height="10pt"/>
                                    <TextView
                                        style="@style/TextViewSemBold"
                                        android:textSize="@dimen/space_7"
                                        android:layout_marginLeft="@dimen/space_5"
                                        android:text="@string/search_destination"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rec_destination"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:textAlignment="center"
                            android:layout_marginTop="@dimen/space_10"
                            android:text="@string/why_us"
                            style="@style/TextViewExtraBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:layout_marginTop="@dimen/space_5"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="3"
                            android:layout_height="50pt">
                            <LinearLayout

                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <ImageView

                                    android:layout_gravity="center"
                                    android:src="@drawable/safe_rides"
                                    android:layout_width="32pt"
                                    android:layout_height="32pt"/>
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="@dimen/space_5"
                                    android:layout_marginTop="@dimen/space_5"
                                    android:text="@string/safe_rides"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout> <LinearLayout

                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/certified"
                                android:layout_width="32pt"
                                android:layout_height="32pt"/>
                            <TextView
                                android:textStyle="bold"
                                android:textSize="@dimen/space_5"
                                android:layout_marginTop="@dimen/space_5"
                                android:text="@string/certified_riders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>
                            <LinearLayout
                                android:layout_marginLeft="@dimen/space_5"

                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/easy_payment"
                                    android:layout_width="32pt"
                                    android:layout_height="32pt"/>
                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="@dimen/space_5"
                                    android:layout_marginTop="@dimen/space_5"
                                    android:text="@string/easy_payments"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</layout>
